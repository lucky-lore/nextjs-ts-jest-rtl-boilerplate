{
    "author": {
        "name": "Loretta Krasteva",
        "url": "https://loretta-arineva.dev"
    },
    "name": "nextjs-ts-rtl-jest-boilerplate",
    "description": "This is a starter template (boilerplate) project that uses NextJS, Typescript, RTL (React Testing Library), Jest, ESlint, Prettier and Git Hooks (Husky). It is everything that you need to get started and has the most useful react scripts already added",
    "version": "1.0.1",
    "license": "MIT",
    "keywords": [
        "react",
        "reactjs",
        "nextjs",
        "typescript",
        "jest",
        "react-testing-library",
        "redux",
        "redux-toolkit",
        "sass",
        "eslint",
        "prettier"
    ],
    "scripts": {
        "dev": "concurrently \"next dev\" \"npm run prettier-watch\" \"npm run format\"",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --fix",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier . --check",
        "prettier:fix": "npm run prettier -- --write",
        "prettier-watch": "onchange  \"**\"  --exclude-path .gitignore -- prettier --write {{changed}}",
        "format": "npm run prettier:fix && npm run lint:fix",
        "prepare": "husky install",
        "test": "jest --config ./jest.config.ts",
        "test:watch": "jest --watch",
        "clean": "rimraf node_modules && rimraf package-lock.json",
        "reinstall": "npm run clean && npm install"
    },
    "engines": {
        "node": ">= 16.0.0",
        "npm": ">= 8.0.0"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.7.2",
        "axios": "^0.25.0",
        "next": "12.0.10",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "sass": "^1.49.7"
    },
    "devDependencies": {
        "@testing-library/dom": "^8.11.3",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.4.0",
        "@types/node": "17.0.14",
        "@types/prettier": "^2.4.3",
        "@types/react": "17.0.38",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "babel-jest": "^27.4.6",
        "concurrently": "^7.0.0",
        "eslint": "^8.8.0",
        "eslint-config-next": "12.0.10",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "onchange": "^7.1.0",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "typescript": "4.5.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lucky-lore/nextjs-ts-rtl-jest-prettier-boilerplate"
    },
    "bugs": {
        "url": "https://github.com/lucky-lore/nextjs-ts-rtl-jest-prettier-boilerplate/issues"
    },
    "homepage": "https://github.com/lucky-lore/nextjs-ts-rtl-jest-prettier-boilerplate#readme"
}
